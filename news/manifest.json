{
  "manifest_version": 2,
  "default_locale": "en",
    
  "name": "__MSG_name__",
  "version": "1.0.4",
  "description": "__MSG_description__",
  "browser_action": {
    "default_icon": {
      "19": "icons/news19.png"
    },
    "default_popup": "index.html"
  },
  "icons": {
    "48": "icons/news48.png",
    "128": "icons/news128.png"
  },
  "background": {
    "page": "background.html"
  },
  "permissions": [
    "tabs",
    "http://*.rambler.ru/*"
  ],
  "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'",
  "update_url": "http://update.rambler.ru/assist/update.xml"
}
