{
  "manifest_version": 2,
  "default_locale": "en",
    
  "name": "__MSG_name__",
  "version": "1.0.2",
  "description": "__MSG_description__",
  "browser_action": {
    "default_icon": {
      "19": "icons/live19.png"
    }
  },
  "icons": {
    "48": "icons/live48.png",
    "128": "icons/live128.png"
  },
  "background": {
    "page": "background.html"
  },
  "permissions": [
    "tabs",
    "http://*.championat.com/*"
  ],
  "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'"
}
